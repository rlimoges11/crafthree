{% macro printArray(scene) %}
    <script>
        var json = [];
        {% for block in scene %}
            var data = [];

            {% if block.type == "star" %}
                data["name"] = "{{ block.type }}-{{ block.id }}";
                data["type"] = "{{ block.type }}";
                data["id"] = "{{ block.id }}";
                data["color"] = "{{ block.color.hex }}";
                data["radius"] = {{ block.radius }};

            {% elseif block.type == "planet" %}
                data["name"] = "{{ block.type }}-{{ block.id }}";
                data["type"] = "{{ block.type }}";
                data["id"] = "{{ block.id }}";
                data["color"] = "{{ block.color.hex }}";
                data["radius"] = {{ block.radius }};
                data["orbitalDistance"] = {{ block.orbitalDistance}};

            {% endif %}

        json.push(data);

        {% endfor %}
    </script>
{% endmacro %}